@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>这是测试页面啦啦</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="login-box">
        <form action="" method="post" class="layui-form layui-form-pane">
            <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                <legend>这是测试页面啦啦</legend>
            </fieldset>
            <button class="layui-btn" lay-submit="" id="btnOk" lay-filter="btnTest" type="button" actionName="Success">
                正常
            </button>
            <button class="layui-btn" lay-submit="" id="btnFail" lay-filter="btnTest" type="button" actionName="Fail">
                失败
            </button>
            <button class="layui-btn" lay-submit="" id="btnFail" lay-filter="btnTest" type="button" actionName="Error">
                异常
            </button>
            <button class="layui-btn" lay-submit="" id="btnFail" lay-filter="btnTest" type="button" actionName="NoFound">
                404
            </button>
            <button class="layui-btn" lay-submit="" id="btnFail" lay-filter="btnTest" type="button" actionName="TimeOut">
                登录超时
            </button>
            <button class="layui-btn" lay-submit="" id="btnFail" lay-filter="btnTest" type="button" actionName="UnRight">
                访问受限
            </button>
        </form>
    </div>

    <script src='@Url.Content("~/Scripts/layui/layui.js")'></script>
    <script src="https://cdn.bootcss.com/js-cookie/latest/js.cookie.js"></script>
    <script>

        layui.config({
            version: true,
            base:'@Url.Content("~/Resource/layui/custom_modules/")' ,
        }).use(['jax', 'form'], function () {
            var form = layui.form;
            var $ = layui.$;
            //正常
            form.on('submit(btnTest)', function (data) {
                var actionName = $(this).attr('actionName');
                $.ajax({
                    url: '/Home/' + actionName,
                    type: "get",
                    dataType: "json",
                    success: function (res) {
                        layer.alert(JSON.stringify(res));
                    }
                });

                return false;
            });

            })
    </script>
</body>
</html>